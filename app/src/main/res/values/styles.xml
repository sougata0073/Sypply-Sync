    <style name="materialCalendarHeaderTitleStyle" parent="Widget.Material3.MaterialCalendar.HeaderTitle">

        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/acherus_feral_bold</item>

    </style>

    <style name="materialCalendarToggleButtonStyle" parent="Widget.Material3.MaterialCalendar.HeaderToggleButton">

        <item name="android:tint">@color/white</item>

    </style>

    <style name="materialCalendarHeaderSelectionStyle" parent="Widget.Material3.MaterialCalendar.HeaderSelection">

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="materialDatePickerStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <item name="colorPrimary">@color/primary_color</item>

        <item name="materialCalendarHeaderTitle">@style/materialCalendarHeaderTitleStyle</item>
        <item name="materialCalendarHeaderToggleButton">@style/materialCalendarToggleButtonStyle</item>
        <item name="materialCalendarHeaderSelection">@style/materialCalendarHeaderSelectionStyle</item>

    </style>



</resources>