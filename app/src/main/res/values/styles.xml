<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="materialComponentsButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/bw</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/acherus_feral_bold</item>
    </style>

    <style name="materialAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Background of the dialog -->
        <item name="android:background">@color/night_mode_background</item>

        <!-- Text color of the dialog -->
        <item name="android:textColor">@color/bw</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/acherus_feral_bold</item>

        <!-- Button style of the dialog -->
        <!--        <item name="buttonBarPositiveButtonStyle">@style/materialComponentsButtonStyle</item>-->
        <!--        <item name="buttonBarNegativeButtonStyle">@style/materialComponentsButtonStyle</item>-->
        <!--        <item name="buttonBarNeutralButtonStyle">@style/materialComponentsButtonStyle</item>-->
    </style>

    <style name="materialCalendarHeaderTitleStyle" parent="Widget.Material3.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/acherus_feral_bold</item>
    </style>

    <style name="materialCalendarToggleButtonStyle" parent="Widget.Material3.MaterialCalendar.HeaderToggleButton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="materialCalendarHeaderSelectionStyle" parent="Widget.Material3.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="materialDatePickerStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary_color</item>

        <item name="materialCalendarHeaderTitle">@style/materialCalendarHeaderTitleStyle</item>
        <item name="materialCalendarHeaderToggleButton">@style/materialCalendarToggleButtonStyle
        </item>
        <item name="materialCalendarHeaderSelection">@style/materialCalendarHeaderSelectionStyle
        </item>
    </style>


    <style name="materialToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/acherus_feral_bold</item>
        <item name="android:textColor">@color/bw</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>