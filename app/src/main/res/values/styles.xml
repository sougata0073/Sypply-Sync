    <style name="circleImageView">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="materialComponentsButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">

        <item name="android:textColor">@color/bw</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/acherus_feral_bold</item>

    </style>


    <style name="materialAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">

        <!-- Background of the dialog -->
